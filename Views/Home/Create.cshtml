@model EzyLiveWebsiteMain.Models.owner.Owner



@Html.Raw(ViewBag.Message)
@Html.Raw(TempData["Submitted"])
@Html.Raw(TempData["LoginDone"])

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EzyLife</title>
    <style>



        * {
            margin: 0;
            padding: 0;
            font-family: "Poppins", sans-serif;
        }

        body {
            background: #f4f4c7;
        }

        /* body {
            background-image: url(Background_1.jpg);
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
        } */

        .container {
            width: 100%;
            min-height: 100vh;
            padding-left: 8%;
            padding-right: 8%;
            box-sizing: border-box;
            overflow: hidden;
        }

        .navbar {
            width: 100%;
            display: flex;
            align-items: center;
            /* position: fixed; */
            /* background-color: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px); */
            /* box-shadow: -10px 0 10px rgba(0, 0, 0, 0.1); */
        }

        .logo {
            width: 150px;
            cursor: pointer;
            margin: 30px 0;
            aspect-ratio: 3 / 2;
            object-fit: contain;
            mix-blend-mode: color-burn;
        }

        .menu-icon {
            width: 25px;
            cursor: pointer;
            display: none;
        }

        nav {
            flex: 1;
            text-align: right;
        }

            nav ul li {
                list-style: none;
                display: inline-block;
                /* margin-right: 30px; */
            }

                nav ul li a {
                    text-decoration: none;
                    color: #000;
                    font-size: 20px;
                    padding: 10px;
                }

                    nav ul li a:hover {
                        /* background-color: rgb(249, 240, 192); */
                        color: #ffd815f1;
                    }

        .row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 100px 0;
        }

        .col-1 {
            flex-basis: 40%;
            position: relative;
            margin-left: 50px;
        }

            .col-1 h2 {
                font-size: 54px;
            }

            .col-1 h3 {
                font-size: 30px;
                color: #707070;
                font-weight: 100;
                margin: 20px 0 10px;
            }

            .col-1 p {
                font-size: 16px;
                color: #b7b7b7;
                margin: 30px 0;
                font-weight: 100;
            }

            .col-1 h4 {
                margin: 30px 0;
                font-size: 20px;
            }

        button {
            width: 140px;
            border: 0;
            padding: 12px 10px;
            outline: none;
            color: #fff;
            background: linear-gradient(to right, #facf0e, #faba25f8);
            border-radius: 6px;
            cursor: pointer;
            transition: width 0.5s;
        }

            button img {
                width: 30px;
                display: none;
            }

            button:hover img {
                display: block;
            }

            button:hover {
                width: 160px;
                display: flex;
                align-items: center;
                justify-content: space-between;
            }

        .col-1::after {
            content: '';
            width: 10px;
            box-shadow: 0 0 50px black;
            height: 57%;
            background: linear-gradient(#Fac469, #fedf13);
            position: absolute;
            left: -40px;
            top: 8px;
        }

        .col-2 {
            position: relative;
            flex-basis: 60%;
            display: flex;
            align-items: center;
        }

            .col-2 .home-img {
                width: 90%;
                height: auto;
            }

        .color-box {
            position: absolute;
            right: 0;
            top: 0;
            background: linear-gradient(#feec22, #fbb80d);
            border-radius: 20px 0 0 20px;
            height: 100%;
            width: 80%;
            z-index: -1;
            transform: translateX(150px);
            box-shadow: 0 0 60px black;
        }

        .row-4 {
            padding: 10px;
            min-height: 100vh;
            box-shadow: 0 0 80px black;
            border-radius: 6px;
            margin: 100px 0;
        }

            .row-4 .intro-heading {
                width: 90%;
                display: flex;
                justify-content: center;
                align-items: center;
                flex-direction: column;
                text-align: center;
                margin: 20px auto;
            }

                .row-4 .intro-heading h1 {
                    font-size: 50px;
                    color: #000;
                    margin-bottom: 25px;
                    position: relative;
                }

                    .row-4 .intro-heading h1::after {
                        content: '';
                        position: absolute;
                        width: 100%;
                        height: 4px;
                        display: block;
                        margin: 0 auto;
                        background-color: #fbe43c;
                    }

                .row-4 .intro-heading p {
                    font-size: 18px;
                    color: #666;
                    margin-bottom: 35px;
                }

        .footer {
            color: #f6d12c;
        }

        .row-2 {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 100px 0;
        }

        .footer .link {
            display: flex;
        }

            .footer .link a,
            .icons {
                margin: 4px;
                color: #f6d12c;
                text-decoration: none;
                transition: color 0.3s;
            }

        .follow::after {
            content: '';
            width: 10px;
            height: 57%;
            background: linear-gradient(#Fac469, #fedf13);
            position: absolute;
            left: -40px;
            top: 8px;
        }

        .row5 {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 100px 0;
            box-shadow: 0 0 80px black;
        }

        .col-6 {
            flex-basis: 40%;
            position: relative;
            margin-left: 50px;
        }

            .col-6 h2 {
                font-size: 54px;
            }

            .col-6 h3 {
                font-size: 30px;
                color: #707070;
                font-weight: 100;
                margin: 20px 0 10px;
            }

            .col-6 p {
                font-size: 16px;
                color: #b7b7b7;
                margin: 30px 0;
                font-weight: 100;
            }

            .col-6 h4 {
                margin: 30px 0;
                font-size: 20px;
            }

            .col-6::after {
                content: '';
                width: 10px;
                box-shadow: 0 0 50px black;
                height: 57%;
                background: linear-gradient(#Fac469, #fedf13);
                position: absolute;
                left: -40px;
                top: 8px;
            }

        .col-7 {
            position: relative;
            flex-basis: 60%;
            display: flex;
            align-items: center;
        }

            .col-7 .home-img {
                width: 90%;
                height: auto;
            }

        .color-box-4 {
            position: absolute;
            right: 0;
            top: 0;
            background: linear-gradient(#feec22, #fbb80d);
            border-radius: 20px 0 0 20px;
            height: 100%;
            width: 100%;
            z-index: -1;
            transform: translateX(150px);
            box-shadow: 0 0 60px black;
        }

        .wrapper {
            background: transparent;
            padding: 20px;
            max-width: 576px;
            width: 100%;
            border-radius: 10px;
            box-shadow: var(--shadow);
            text-align: center;
        }

            .wrapper h3 {
                font-size: 50px;
                font-weight: 600;
                margin-bottom: 10px;
            }

        form {
            box-shadow: 0 0 5px black;
            padding: 15px;
            margin: 10px;
            justify-content: center;
        }

        .rating {
            display: flex;
            justify-content: center;
            /* align-items: center; */
            grid-gap: 5px;
            font-size: 30px;
            color: var(--yellow);
            margin-bottom: 20px;
        }

            .rating .star {
                cursor: pointer;
            }

                .rating .star .active {
                    opacity: 0;
                    animation: animate .5s ease-in-out forwards;
                }



                .rating .star:hover {
                    transform: scale(1.1);
                }

        textarea {
            width: 90%;
            background: var(--light);
            padding: 10px;
            border-radius: 15px;
            border: none;
            resize: none;
            /* box-shadow: 0 0 5px black; */
        }

        label {
            text-align: center;
            font-size: 20px;
            width: 100%;
            color: var(--blue-d-1);
            /* margin: 0 100px 0 0;
        padding: 0 0 0 99px; */
            /* margin-bottom: 20px; */
            /* margin-right: 50px;
        margin-left: 50px; */
        }

        input {
            text-align: center;
            font-size: 20px;
            width: 90%;
            color: var(--blue);
            margin-bottom: 20px;
            box-shadow: 0 0 1.5px black;
            border: none;
        }

        .btn-grp {
            display: flex;
            grid-gap: .5rem;
            align-items: center;
            justify-content: center;
        }

            .btn-grp .btn {
                padding: .75rem 1rem;
                border-radius: .5rem;
                border: none;
                outline: none;
            }

            .btn-grp .submit {
                background: var(--blue);
                color: var(--white);
            }

                .btn-grp .submit:hover {
                    background: var(--blue-d-1);
                }

            .btn-grp .cancel {
                background: var(--white);
                color: var(--blue);
            }

                .btn-grp .cancel:hover {
                    background: var(--light);
                }
        }
    </style>
    <link rel="icon" href="@Url.Content("~/Tab_image_1.jfif")">
    <link rel="stylesheet" href="@Url.Content("~/navbar.css")">
    <link rel="stylesheet" href="@Url.Content("~/scrollbar.css")">
    <link rel="stylesheet" href="@Url.Content("~/swiper-bundle.min.css")">
    <script src="https://kit.fontawesome.com/012d0abd64.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="@Url.Content("~/owner-slide.css")">
</head>
<body>
    <div class="container">
        <div class="navbar">
            <img src="@Url.Content("~/PImg/Tab_image_1.jfif")" alt="" class="logo">
            <nav>
                <ul id="menuList">
                    <li><a href="@Url.Action("Index", "Home")">Rating</a></li>
                    <li><a href="@Url.Action("About", "Home")">About</a></li>
                    <li><a href="@Url.Action("Contact", "Home")">Contact</a></li>
                    <li><a href="@Url.Action("Logout", "Home")">Logout</a></li>
                </ul>
            </nav>
            <img src="menu.png" alt="" class="menu-icon" onclick="togglemenu()">
        </div>
        <div class="row">
            <div class="col-1">
                <h2>EzyLife<br>Tenants Hub</h2>
                <h3>Streamlining your rental journey, one click at a time.</h3>
                <p>
                    Welcome to our website! Here you can find information on how to sort and filter the content to best
                    suit your needs.
                </p>
                <button type="button">Get Started <img src="arrow.png" alt=""></button>
            </div>
            <div class="col-2">
                <img src="@Url.Content("~/PImg/home.png")" class="home-img">
                <div class="color-box"></div>
            </div>
        </div>
        <div class="row-4">
            <div class="intro-heading">
                <h1>EzyLife Introduction</h1>
                <p>
                    Welcome to our website! Here you can find information on how to sort and filter the content to best
                    suit your needs.
                </p>
            </div>
            <div class="intro">
                <div class="into-content">
                    <h2>EzyLife</h2>
                    <p>
                        Welcome to our rental property platform. We understand the challenges renters face in
                        today's fast-paced world when trying to find the perfect place to call home. With so many
                        listings
                        and vague descriptions, it's easy to feel overwhelmed. Plus, signing a lease can sometimes
                        reveal
                        unexpected issues that weren't mentioned during the search, making the process even more
                        daunting.
                        <br>
                        But fear not! We're here to help. Our platform is designed to streamline the rental process,
                        providing comprehensive information and assistance so you can navigate your housing journey with
                        confidence and ease. Whether you're looking for an apartment, house, or condo, we're committed
                        to
                        simplifying the rental experience and helping you find your ideal home sweet home.
                    </p>
                </div>
            </div>

        </div>
        <div class="row5">
            <div class="col-6">
                <h4>Fill this Form to Rent Your Place</h3>
            </div>
            <div class="col-7">
                <div class="wrapper">
                    @using (Html.BeginForm("Create", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.name, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.contact, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.contact, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.contact, "", new { @class = "text-danger" })
                            </div>

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.address, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.address, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.image, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <input type="file" name="ImageFile" required />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Submit" class="btn btn-default" />
                            </div>
                        </div>

                    }
                </div>
            </div>
        </div>
        <!-- Your existing HTML content here -->
    </div>
</body>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
